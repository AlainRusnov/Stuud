<!-- STUUD Dashboard -->
<div class="dashboard">


  <div class="container-left">
    <h1>Upcoming Appointments </h1>
    <hr/>
    <div class="divider">
      <h2 class="divider">Today</h2>
    </div>
    <div class="today">
      <% @todays_bookings.each do |booking| %>
        <div class="card-dashboard">
          <p class="client-name"><%= booking.client.first_name %> <%= booking.client.last_name %></p>
          <p class="event-date"><%= booking.date.strftime("%b %e, %l:%M %p") %></p>
          <%= image_tag "noun_Vertical Dots_3560972 (1).svg", alt: "alttext" %>
          <div id="color-indicator"></div>
        </div>
      <% end %>

    </div>



<!------------------ UPCOMING APPOINTMENTS ------------------>
    <div class="future">

    <div class="divider">
      <h2 class="divider">Future</h2>
    </div>
      <% @future_bookings.each do |booking| %>
      <div class="card-dashboard">
        <p class="client-name"><%= booking.client.first_name %> <%= booking.client.last_name %></p>
        <p class="event-date"><%= booking.date.strftime("%b %e, %l:%M %p") %></p>
        <%= image_tag "noun_Vertical Dots_3560972 (1).svg", alt: "alttext" %>
        <div id="color-indicator"></div>
      </div>
      <% end %>



    </div>

  </div>





  <div class="container-right">
  <!------------------ PENDING INVOICES ------------------>
    <h1> Pending Invoices </h1>
    <hr/>

    <div class="pending-invoices">
      <% @pending_invoices.each do |invoice| %>
        <div class="card-invoice">
          <p class="client-name"><%= invoice.client.first_name %> <%= invoice.client.last_name %></p>
          <div id="invoice-info">
            <p>#Invoice #5555</p>
            <p><%= invoice.price %>$</p>
            <p><%= invoice.date.strftime("%A, %b %d") %></p>
          </div>
          <div id="color-indicator"></div>
        </div>
      <% end %>
    </div>

    <!------------------ WEEKLY REPORT ------------------>

    <h1> Weekly Report </h1>
    <hr/>
    <div class="card-weekly-report">
      <h3>Appointments: <%= @bookings_weekly_count %></h3>
      <h3>Expenses: <%= @total_expenses_weekly %>$</h3>
      <h3>Income: <%= @income %>$</h3>
      <%= link_to "New Booking", new_booking_path  %>
    </div>
  </div>


</div>


