<hr/>
<div class="new-booking">
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<%= f.association :client,
                      :label_method => :fullname,
                      required: true%>
    <%= f.input :title,
                required: true%>
   <%= f.input :start_time,
                as: :string,
                required: true,
                input_html: {class: "datepicker"}%>
    <%= f.input :end_time,
                as: :string,
                input_html: {class: "datepicker"},
                required: true%>
    <%# <%= f.input :length,
                collection: @lengths,
                # label: false,
                placeholder: "length" %>
    <%= f.input :price,
                # label: false,
                required: true%>
    <%= f.input :payment_status,
                required: true,
                label: "paid?",
                placeholder: "paid?",
                as: :select %>
   <div class="form-actions">
    <%= f.submit %>
  <% end %>
</div>
