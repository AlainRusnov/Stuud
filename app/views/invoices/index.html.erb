<div class="invoice-index">
  <div class="header">
    <h1>My Invoices</h1>
    <hr/>
  </div>
  <div class="top-bar">
    <div class="search-bar">
      <%= simple_form_for :search, url: invoices_path, method: :get do |f| %>
      <div class="search-form-control form-group no-bmargin">
        <div>
          <input class="form-control string required" type="text" name="query" id="search_query" placeholder="search"/>
        </div>
      </div>
      <% end %>
    </div>
    <div class="tags">
      <div>
        <h3>Tags:</h3>
      </div>
      <div class="tag-icons">
        <div class="tag-icon">
          <%= link_to invoices_path + "?query=red" do %>
            <%= image_tag "red-tag.svg", height: 24, width: 24 %>
          <% end %>
        </div>
        <div class="tag-icon">
          <%= link_to invoices_path + "?query=yellow" do %>
            <%= image_tag "yellow-tag.svg", height: 24, width: 24 %>
          <% end %>
        </div>
        <div class="tag-icon">
          <%= link_to invoices_path + "?query=blue" do %>
            <%= image_tag "blue-tag.svg", height: 24, width: 24 %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="invoice-cards">
    <% @invoices.each do |invoice| %>
    <div class="invoice-card">
        <div class="card-left">
          <div class= "card-section"><h2><%= link_to invoice.client.fullname, client_path(invoice.client) %></h2></div>
      <%= link_to invoice_path(invoice, format: :pdf), target: "_blank" do %>
          <div class= "card-section"><p>Invoice # 10148<%= invoice.id %></p></div>
      <% end %>
        </div>
        <div class="card-right">
          <div class= "card-section"><p><%= invoice.event.start_time.localtime.strftime("%b %e") %></p></div>
          <div class= "card-section"><p><%= link_to "Edit", edit_invoice_path(invoice) %></p></div>
          <div class= "card-section"><p><%= link_to "Remove",
              invoice_path(invoice),
              method: :delete, data: { confirm: "Are you sure?" }%></p>
              <% if invoice.event.payment_status == false %>
                <%= link_to "Send invoice", invoice_send_email_path(invoice), method: :post %>
              <% end %>
            </div>

           <div class="card-end">
          <%= image_tag "noun_Vertical Dots_3560972 (1).png", alt: "alttext", height: 50 %>
          <% if invoice.client.color == "Red" %>
                <div class="color-indicator-red"></div>
              <% elsif invoice.client.color == "Yellow" %>
                <div class="color-indicator-yellow"></div>
              <% elsif invoice.client.color == "Blue" %>
                <div class="color-indicator-blue"></div>
              <% else %>
                <div></div>
              <% end %>
        </div>
        </div>

    </div>

    <% end %>

  </div>
  <div class="new-invoice-btn">
    <p class="btn-orange"><%= link_to "New Invoice", invoice_set_client_path %></p>
  </div>
</div>
