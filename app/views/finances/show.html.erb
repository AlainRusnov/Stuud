<!-- STUUD Finances -->
<div class="finances">
  <div class="container-left">
    <h1>My Finances</h1>
    <hr/>

    <div id="graph-buttons">
      <div>
        <a href="#" class="btn-graph">Week</a>
      </div>
      <div>
        <a href="#" class="btn-graph">Month</a>
      </div>
      <div>
        <a href="#" class="btn-graph">Year</a>
      </div>
    </div>

    <div class="graph">

    </div>

    <div class="data-graph">

      <div class="card-data income">
        <h3>Income</h3>
        <% if @income_weekly == nil %>
          <p>$0</p>
        <% else %>
          <p>$<%= @income_weekly %></p>
<!--         <p>&<%= @income_monthly %>$</p>
        <p>&<%= @income_yearly %>$</p> -->
        <% end %>
      </div>

      <div><p>-</p></div>

      <div class="card-data expenses">
        <h3>Expenses</h3>
        <p>$<%= @total_expenses_weekly %></p>
<!--         <p>Expenses: <%= @total_expenses_monthly %>$</p>
        <p>Expenses: <%= @total_expenses_yearly %>$</p> -->
      </div>

      <div><p>=</p></div>

      <!-- NEED TOTAL INCOME LOGIC -->

      <div class="card-data total">
        <h3>Total Income</h3>
        <p>$0</p>
      </div>

    </div>

  </div>

  <div class="container-right">

  <h1>Invoices</h1>
    <hr/>
    <div class="invoices">

  <!------------------ OVERDUE INVOICES ------------------>

  <div class="overdue">
    <div class="divider">
      <h2 class="divider">Overdue</h2>

    </div>
    <% @overdue_invoices.each do |invoice| %>
      <div class="card-invoice">
        <div class="client-name">
          <% if invoice.client.last_name.length > 10 %>
            <%= link_to invoice.client.first_name + " " + invoice.client.last_name[0] + ".", client_path(invoice.client), class: "client-name" %>
          <% else %>
            <%= link_to invoice.client.first_name + " " + invoice.client.last_name, client_path(invoice.client), class: "client-name" %>
          <% end %>
        </div>
        <div id="invoice-info">
          <p>Invoice #<%= invoice.id %></p>
          <p>$<%= invoice.price %></p>
          <p class="bold"><%= invoice.start_time.localtime.strftime("%A, %b %d") %></p>
        </div>
        <div class="invoice-status-indicator">
          <%= image_tag "noun_Close_23269(1).png", alt: "overdue icon"%>
        </div>
      </div>
    <% end %>
  </div>

  <!------------------ PENDING INVOICES ------------------>

  <div class="pending">
    <div class="divider">
      <h2 class="divider">Pending</h2>
    </div>
    <% @pending_invoices.each do |invoice| %>
      <div class="card-invoice">
        <div class="client-name">
          <% if invoice.client.last_name.length > 10 %>
            <%= link_to invoice.client.first_name + " " + invoice.client.last_name[0] + ".", client_path(invoice.client), class: "client-name" %>
          <% else %>
            <%= link_to invoice.client.first_name + " " + invoice.client.last_name, client_path(invoice.client), class: "client-name" %>
          <% end %>
        </div>
        <div id="invoice-info">
          <p>Invoice #<%= invoice.id %></p>
          <p>$<%= invoice.price %></p>
          <p class="bold"><%= invoice.start_time.localtime.strftime("%A, %b %d") %></p>
        </div>
        <div class="invoice-status-indicator">
          <%= image_tag "noun_clock_23236.png", alt: "pending icon"%>
        </div>
      </div>
    <% end %>
  </div>

  <!------------------ PAID INVOICES ------------------>

  <div class="paid">
    <div class="divider">
      <h2 class="divider">Paid</h2>

    </div>
    <% @paid_invoices.each do |invoice| %>
      <div class="card-invoice">
        <div class="client-name">
          <% if invoice.client.last_name.length > 10 %>
            <%= link_to invoice.client.first_name + " " + invoice.client.last_name[0] + ".", client_path(invoice.client), class: "client-name" %>
          <% else %>
            <%= link_to invoice.client.first_name + " " + invoice.client.last_name, client_path(invoice.client), class: "client-name" %>
          <% end %>
        </div>
        <div id="invoice-info">
          <p>Invoice #<%= invoice.id %></p>
          <p>$<%= invoice.price %></p>
          <p class="bold"><%= invoice.start_time.localtime.strftime("%A, %b %d") %></p>
        </div>
        <div class="invoice-status-indicator">
          <%= image_tag "noun_Check Mark_23235.png", alt: "paid icon"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
