<hr>

<h1>Report summary</h1>
<h6><%= @income_report.last["start_time"].strftime("%b %e %Y") %> - <%= @income_report.first["start_time"].strftime("%b %e %Y") %></h6>
<br>
<h6> Total expected income for this period :</h6><h2>    <%= @income %> $</h2>
<h6> Total expenses for this period :</h6><h2>    <%= @total_expenses %> $</h2>

<hr>

<div class="header">
<h1>Income details</h1>

<br>
<h3>
<table>
    <tr>
      <th>#id</th>
      <th>Date</th>
      <th>Client</th>
      <th>Price</th>
    </tr>
  <tr><% @income_report.each do |row| %>
    <td>#<%= row["event_id"] %></td>
    <td><%= row["start_time"].strftime("%b %e %Y") %></td>
    <td><%= row["clientfullname"] %></td>
    <td><%= row["price"] %>$</td></tr>
  <% end %>
</table></h3>
<div>



<hr>
<div class="header">
<h1>Expense details</h1>

<br>
<h3>
<table>
    <tr>
      <th>#id</th>
      <th>Date</th>
      <th>Name</th>
      <th>Amount</th>
    </tr>
<tr><% @expense_report.each do |row| %>
    <td><%= row["id"] %></td>
    <td><%= row["date"].strftime("%b %e %Y") %></td>
    <td><%= row["name"] %></td>
    <td><%= row["amount"] %>$</td></tr>
  <% end %>
  </table>
  </h3>
<hr>
</div>
</div>

</div>