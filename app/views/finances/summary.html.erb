<div class="container">
  <div>
    <%= link_to root_path do %>
      <%= image_tag "logo.svg", alt: "", class: "logo" %>
    <% end %>
   </div>
  <div class="header">
    <div class="header-left">
      <h1>Financial report</h1>
      <!-- <h3><%= current_user.first_name%> <%= current_user.last_name %></h3>
      <h3><%= current_user.email %></h3> -->
      <h2><%= @income_report.last["start_time"].strftime("%b %e %Y") %> - <%= @income_report.first["start_time"].strftime("%b %e %Y") %></h2>
    </div>
     <div class="header-right">
      <h2><%= current_user.first_name%> <%= current_user.last_name %></h2>
      <h3><%= current_user.email %></h3>
    </div>
  </div>
  <hr/>

  <h2>Income</h2>
  <h3>
  <table>
      <tr>
        <th>id#</th>
        <th>Date</th>
        <th>Client</th>
        <th>Amount</th>
      </tr>
    <tr><% @income_report.each do |row| %>
      <td><%= row["event_id"] %></td>
      <td><%= row["start_time"].strftime("%b %e %Y") %></td>
      <td><%= row["clientfullname"] %></td>
      <td><%= row["price"] %>$</td></tr>
    <% end %>
  </table>
  </h3>
  <div class="section">
    <h3> Total: <strong>$<%= @income %></strong></h3>
  </div>

  <h2>Expenses</h2>
  <h3>
  <table>
      <tr>
        <th>id#</th>
        <th>Date</th>
        <th>Name</th>
        <th>Amount</th>
      </tr>
  <tr><% @expense_report.each do |row| %>
      <td><%= row["id"] %></td>
      <td><%= row["date"].strftime("%b %e %Y") %></td>
      <td><%= row["name"] %></td>
      <td><%= row["amount"] %>$</td></tr>
    <% end %>
    </table>
    </h3>
    <div class="section">
    <h3> Total: <strong>$<%= @total_expenses %></strong></h3>
  </div>
  <hr/>

  <div class="section">
    <h1> Profit: $<%= @profit %> </h1>
  </div>
<br>
<br>
<br>


  <div class="section">
    <div><%= image_tag "copyright.svg", alt: "", class: "symbol" %> Stuud 2020</div>
    <h3> www.stuud.app</h3>
  </div>




</div>

