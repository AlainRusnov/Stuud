<style>

  h1 {
  font-family: 'Playfair Display', serif!important;
  font-size: 26px!important;
  font-weight: bold!important;
  color: #2a3266!important;
  }

  h2 {
  font-family: 'Montserrat', sans-serif!important;
  font-size: 16px!important;
  font-weight: bold!important;
  color: #fb6c00!important;
  }

  h3 {
  font-family: 'Montserrat', sans-serif!important;
  font-size: 16px!important;
  font-weight: 500!important;
  color: #2a3266!important;
  }

  h5 {
  font-family: 'Montserrat', sans-serif!important;
  font-size: 16px!important;
  font-weight: 500!important;
  color: black!important;
  }

  p {
  font-family: 'Montserrat', sans-serif!important;
  font-size: 16px!important;
  color: #2a3266!important;
  }

  table, tr, td {
    border: 1.5px solid grey;
  }

  th {
    text-align: center;
  }

  .page-body {
      border-top: 1px solid $sblue;
      margin-left: 0px!important;
    }
    .container {
      margin-top: 48px;
    }

    .header {
      display: flex;
      justify-content: center;
    }

    .user-info {
      text-align: right;
    }

    .invoice-section {
      margin-top: 16px;
    }

    .total {
      text-align: left;
    }
</style>

<div class="page-body">

  <div class="total">
  <h2>www.Stuud.app</h2>
  <h6>Financial report<h6>
  <h6><%= DateTime.now.strftime("%b %e %Y") %></h6>
  </div>
  <div class="user-info">
  <p><%= current_user.first_name %> <%= current_user.last_name %><br>
  <%= current_user.email %>  </p>
  </div>



