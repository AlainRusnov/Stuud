<%= simple_form_for(@booking) do |f| %>
  <%= f.association :client, :label_method => :fullname  %>
  <%= f.input :date %>
  <%= f.input :length, collection: @lengths %>
  <%= f.input :price %>
  <%= f.input :payment_status, as: :radio_buttons %>
  <%= f.input :description %>
  <%= f.submit %>
<% end %>