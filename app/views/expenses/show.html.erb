
  <h1>Expenses Show</h1>



<div class="container-right">
    <%= line_chart Booking.group(:description).sum(:price),
    donut: true,
    label: "Income",
    suffix: "$",
    title: "Total Income #{@income} $",
    width: "400px",
    height: "300px",
    colors: ["#424D58", "#FB6C00", "#ffe954"],
    library: {backgroundColor: "#F6F5F6"} %>
    <br>
    <%= pie_chart Expense.group(:name).sum(:amount),
    donut: true,
    label: "Expense",
    suffix: "$",
    title: "Total Expenses #{@total_expenses} $",
    width: "400px",
    height: "300px",
    colors: ["#D42803", "#FB6C00", "#424D58"],
    library: {backgroundColor: "#F6F5F6"} %>

  </div>