<h3>Income from bookings: <%= @income %>$</h3>
<h3>Total expenses: <%= @total_expenses %>$</h3>
<% @expenses.each do |expense| %>
  <h4>Expense #<%= expense.id %></h4>
  <ul>
    <li>Name: <%= expense.name %></li>
    <li>Amount: <%= expense.amount %>$</li>
