<h1> St√ºud Calendar </h1>


<%= content_tag :div, data: { controller: 'calendar' } do %>
  <%= content_tag :div, class: 'modal', data: { target: 'calendar.modal' } do %>
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <%= form_with model: Event.new, local: true do |form| %>
        <%#= simple_form_for(Event.new) do |f| %>
          <div class="modal-body">
            <div class="field">
              <%#= f.input :all_day %>
              <%= form.label :all_day %>
              <%= form.check_box :all_day %>
            </div>

            <div class="field">
              <%#= f.input :start_time, data: { target: 'calendar.start_time' } %>
              <%= form.label :start_time %>
              <%= form.datetime_select :start_time, data: { target: 'calendar.start_time' } %>
            </div>

            <div class="field">
              <%#= f.input :end_time, data: { target: 'calendar.end_time' } %>
              <%= form.label :end_time %>
              <%= form.datetime_select :end_time, data: { target: 'calendar.end_time' } %>
            </div>

            <div class="field">
              <%#= f.input :title %>
              <%= form.label :title %>
              <%= form.text_field :title %>
            </div>

            <div class="field">
              <%#= f.association :client, :label_method => :fullname %>
              <%# @clientlist = Client.where(user_id:@user) %>
              <%= form.label :client %>
              <%= select(:event, :client_id, Client.where(user_id:current_user).collect {|c| [ c.first_name.capitalize + " " + c.last_name.capitalize, c.id ] }, {include_blank: 'None'}) %>
            </div>

            <div class="field">
              <%#= f.input :price %>
              <%= form.label :price %>
              <%= form.text_field :price %>
            </div>

            <div class="field">
              <%#= f.input :color, collection: %w[Blue Yellow Red Orange] %>
              <%= form.label :color %>
              <%= form.select :color, collection: [['Yellow','yellow'], ['Blue','blue'], ['Red','red'], ['Orange','orange'], ['Pink','pink'], ['Black','black']] %>
            </div>
            <div class="field">
              <%#= f.input :payment_status %>
              <%= form.label :paid? %>
              <%= form.check_box :payment_status %>
             </div>
            <div class="modal-footer">
              <%#= f.submit %>
              <%= form.submit class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <%= tag :div, data: { target: 'calendar.calendar' } %>
<% end %>

</div>